<Page x:Class="FitnessClub.Element.Perehod"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FitnessClub.Element"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Perehod">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Column="1">
            <TextBlock Text="Клиент" FontSize="20"/>
            <ComboBox Margin="10" FontSize="20"/>
            <TextBlock Text="Дата"/>
            <DatePicker Margin="10" FontSize="20"/>
            <TextBlock Text="Время"/>
            <TextBox Margin="10" FontSize="20"/>
        </StackPanel>
        <StackPanel Orientation="Vertical">
            <TextBlock Text="Наименование" FontSize="20"/>
            <TextBlock Name="TbNamePerehod" Text="Наименование услуги" Height="60"/>
            <TextBlock Text="" Height="40"/>
        </StackPanel>

        <Button Grid.Column="1" Grid.Row="1" Content="Записаться" Margin="3" Background="{StaticResource DownCollor}"/>
    </Grid>
</Page>
